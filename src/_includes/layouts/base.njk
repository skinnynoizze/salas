<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} | Casa Retiro Verde | Salas, Asturias | Rural Hotel</title>
    
    <!-- Preload critical assets -->
    <link rel="preload" href="/css/styles.css" as="style">
    <link rel="preload" href="/js/script.js" as="script">
    <link rel="preload" href="/js/scrollreveal.js" as="script">
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Roboto:wght@300;400&display=swap" as="style">
    
    <!-- Stylesheets -->
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Roboto:wght@300;400&display=swap" rel="stylesheet">
    
    <!-- Defer non-critical CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" media="print" onload="this.media='all'">
    
    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="preconnect" href="https://cdnjs.cloudflare.com">

    <!-- Add meta description for SEO -->
    <meta name="description" content="{{ description }}">
</head>
<body>
    <!-- Header -->
    <header>
        <!-- Logo -->
        <div class="logo-container">
            <div class="logo"><a href="/index.html">Casa Retiro Verde</a></div>
            <div class="logo-subtitle">SALAS - ASTURIAS</div>
        </div>
        
        <!-- Navigation -->
        <div class="nav-and-button">
            <button class="menu-toggle" aria-label="Toggle menu">
                <span class="hamburger"></span>
            </button>
            <nav class="main-nav">
                <!-- Navigation menu items -->
                <ul>
                    <li><a href="/stay/">Stay</a></li>
                    <li><a href="/eat-and-drink/">Eat & Drink</a></li>
                    <li><a href="/wellness/">Wellness</a></li>
                    <li><a href="/events/">Events</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropbtn">Explore</a>
                        <div class="dropdown-content">
                            <a href="/surroundings/">Salas Surroundings</a>
                            <a href="/museum/">Private Museum</a>
                            <a href="/gallery/">Gallery</a>
                            <a href="/press/">Press</a>
                            <a href="/contact/">Contact</a>
                        </div>
                    </li>
                    <li><a href="#book" class="book-now">Book Now</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <main>
<!-- Hero Section -->
<section id="hero" style="background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url('{{ hero_image if hero_image else '/img/hero.jpg' }}');">
    <div class="section-container">
        <div class="hero-content">
            {{ hero_content | safe if hero_content }}
        </div>
    </div>
</section>

        <!-- Page-specific content will be inserted here -->
        {{ content | safe }}
    </main>

    <!-- Footer -->
    <footer>
        <!-- Footer Top -->
        <div class="footer-top">
            <div class="footer-logo">Casa Retiro Verde</div>
            <div class="footer-line"></div>
        </div>
        
        <!-- Footer Content -->
        <div class="footer-content">
            <!-- Newsletter -->
            <div class="newsletter">
                <h3>Stay Connected</h3>
                <form>
                    <input type="email" placeholder="Enter your email">
                    <button type="submit">Sign Up</button>
                </form>
            </div>
            
            <!-- Footer Links -->
            <div class="footer-links">
                <h3>Site Map</h3>
                <ul>
                    <li><a href="#stay">Stay</a></li>
                    <li><a href="#dining">Eat & Drink</a></li>
                    <li><a href="#amenities">Wellness</a></li>
                    <li><a href="#events">Events</a></li>
                    <li><a href="#press">Gallery</a></li>
                    <li><a href="#press">Press</a></li>
                    <li><a href="#press">Library</a></li>
                    <li><a href="#contact">Contact</a></li>
                </ul>
            </div>
            
            <!-- Social Media -->
            <div class="social-media">
                <h3>Follow Us</h3>
                <a href="#" aria-label="Facebook"><i class="fab fa-facebook"></i></a>
                <a href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                <a href="#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
            </div>
        </div>
        
        <!-- Legal Information -->
        <div class="legal">
            <p>&copy; 2024 Casa Retiro Verde. All rights reserved.</p>
            <a href="#terms">Terms of Service</a>
            <a href="#privacy">Privacy Policy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="/js/scrollreveal.js" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/gsap.min.js" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/Draggable.min.js" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/InertiaPlugin.min.js" defer></script>
    <script src="/js/script.js" defer></script>
</body>
</html>